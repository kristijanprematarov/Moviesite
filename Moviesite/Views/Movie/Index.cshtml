
@model IEnumerable<Moviesite.Entities.Movie>


<div class="container mt-4">

    <h1>Movies</h1>

    <div class="row mb-4">
        <div class="col-12 col-md-12">
            <a class="btn-success btn float-right" asp-controller="Movie" asp-action="Create">
                <i class="fas fa-plus-circle"></i>
                &nbsp; &nbsp;
                Create
            </a>
        </div>
    </div>

    <table class="table table-bordered table-hover table-responsive-md">

        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Producer</th>
                <th>Director</th>
                <th>Actors</th>
                <th>Release Date</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        <a class="text-dark" href="/Movie/Details/@movie.Id">@Html.DisplayFor(modelItem => movie.Title)</a>
                    </td>
                    <td>
                        <a class="text-dark" href="/Producer/Details/@movie.ProducerID">@Html.DisplayFor(modelItem => movie.ProducerName)</a>
                    </td>
                    <td>
                        <a class="text-dark" href="/Director/Details/@movie.DirectorID">@Html.DisplayFor(modelItem => movie.DirectorName)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => movie.ActorNames)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => movie.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => movie.GenreName)
                    </td>
                    <td>
                        <a class="btn-secondary btn btn-block" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">
                            <i class="fas fa-edit"></i>
                            &nbsp; &nbsp;
                            Edit
                        </a>
                        <a class="btn-info btn btn-block" asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
                            <i class="fas fa-info"></i>
                            &nbsp; &nbsp;
                            Details
                        </a>
                        <a class="btn-danger btn btn-block" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">
                            <i class="fas fa-trash"></i>
                            &nbsp; &nbsp;
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
