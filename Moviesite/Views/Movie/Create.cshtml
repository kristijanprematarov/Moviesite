
@model Moviesite.ViewModels.MovieActorViewModel

<div class="container">
    <h1 class="text-center">CREATE MOVIE</h1>

    <hr>

    <form asp-action="Create">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.Title"></label>
                <input asp-for="Movie.Title" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.ProducerName"></label>
                <input asp-for="Movie.ProducerName" type="text" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Movie.ProducerID"></label>
                <select asp-for="Movie.ProducerID" class="form-control" asp-items="ViewBag.ProducerList"></select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Actors"></label>
                <select asp-for="Actors" multiple="multiple" class="form-control" asp-items="ViewBag.ActorList"></select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.DirectorName"></label>
                <input asp-for="Movie.DirectorName" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.DirectorID"></label>
                <select asp-for="Movie.DirectorID" class="form-control" asp-items="ViewBag.DirectorList"></select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.ReleaseDate"></label>
                <input asp-for="Movie.ReleaseDate" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.Duration"></label>
                <input asp-for="Movie.Duration" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.GenreName"></label>
                <input asp-for="Movie.GenreName" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.GenreID"></label>
                <select asp-for="Movie.GenreID" class="form-control" asp-items="ViewBag.GenreList"></select>
                @*@Html.DropDownListFor(x => x.GenreID, new SelectList(ViewBag.GenreList,"Value","Text"),
                    htmlAttributes: new { @class="form-control", id="GenreID" })*@
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.Price"></label>
                <input asp-for="Movie.Price" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.FormatType"></label>
                <input asp-for="Movie.FormatType" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Movie.Description"></label>
                <input asp-for="Movie.Description" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.Language"></label>
                <input asp-for="Movie.Language" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.Country"></label>
                <input asp-for="Movie.Country" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.Shipping"></label>
                <input asp-for="Movie.Shipping" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.SoldItems"></label>
                <input asp-for="Movie.SoldItems" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Movie.PhotoURL"></label>
                <input asp-for="Movie.PhotoURL" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Movie.Rating"></label>
                <input asp-for="Movie.Rating" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Movie.DateAdded"></label>
                <input asp-for="Movie.DateAdded" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="btn-group col-12 mt-4">
                <input class="btn-success btn" type="submit" name="Create" value="Create" />
            </div>
        </div>
    </form>
    <div class="mt-3">
        <a asp-action="Index">Back to list</a>
    </div>
</div>

