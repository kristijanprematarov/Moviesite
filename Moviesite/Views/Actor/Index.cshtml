@model IEnumerable<Moviesite.Entities.Actor>

<div class="container">
    <h1>Actors</h1>

    <div class="row mb-4">
        <div class="col-12 col-md-12">
            <a class="btn-success btn float-right" asp-controller="Actor" asp-action="Create">
                <i class="fas fa-plus-circle"></i>
                &nbsp; &nbsp;
                Create
            </a>
        </div>
    </div>

    <table class="table table-bordered">

        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>DateBirth</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var actor in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => actor.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => actor.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => actor.DateBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => actor.Gender)
                    </td>
                    <td>
                        <a class="btn-secondary btn btn-block" asp-controller="Actor" asp-action="Edit" asp-route-id="@actor.Id">
                            <i class="fas fa-edit"></i>
                            &nbsp; &nbsp;
                            Edit
                        </a>
                        <a class="btn-info btn btn-block" asp-controller="Actor" asp-action="Details" asp-route-id="@actor.Id">
                            <i class="fas fa-info"></i>
                            &nbsp; &nbsp;
                            Details
                        </a>
                        <a class="btn-danger btn btn-block" asp-controller="Actor" asp-action="Delete" asp-route-id="@actor.Id">
                            <i class="fas fa-trash"></i>
                            &nbsp; &nbsp;
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
